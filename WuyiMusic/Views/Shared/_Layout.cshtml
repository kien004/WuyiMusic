                        <div class="subtitle">Alan</div>
                        <i class="bi PlayListPlay bi-play-circle-fill" id="1"></i>
                    </h5>
                </li>
            </div>
        </div>
        <div class="song_side">
            <nav>
                <ul>
                    <li>Discover <span></span></li>
                    <li>My Libray <span></span></li>
                    <li>Radio <span></span></li>
                </ul>
                <div class="search">
                    <i class="bi bi-search"></i>
                    <input type="text" placeholder="search music">
                </div>
                <div class="user">
                    <img src="/assets/profile.png" alt="user" title="wuyi">
                </div>
            </nav>
            <div class="content">
                @RenderBody()
            </div>
        </div>

        <div class="master_play">
            <div class="wave">
                <div class="wave1"></div>
                <div class="wave1"></div>
                <div class="wave1"></div>
            </div>
            <img src="/1.png" alt="Alan">
            <h5>
                on my way <br>
                <div class="subtitle">Alan</div>
            </h5>
            <div class="icon">
                <i class="bi bi-skip-start-fill"></i>
                <i class="bi bi-play-fill"></i>
                <i class="bi bi-skip-end-fill"></i>
            </div>
            <span id="currentStart">0:00</span>
            <div class="bar">
                <!-- <input type="range" id="seek" min="0" value="0" max="0"> -->
                <div class="bar2" id="bar2"></div>
                <div class="dot"></div>
            </div>
            <span id="currentEnd">0:00</span>
            <div class="vol">
                <i class="bi bi-volume-down-fill"></i>
                <input type="range" id="vol" min="0" value="30" max="0">
                <div class="vol_bar"></div>
                <div class="dot" id="vol_dol"></div>
            </div>
    </header>

    <script src="app.js"></script>
</body>

</html>